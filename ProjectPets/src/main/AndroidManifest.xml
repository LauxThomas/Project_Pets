<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.t_thinkpad.projectpetsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- <uses-permission android:name="android.permission.VIBRATE"/> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="ProjectPets"/>
        <activity
            android:name=".MyPetsActivity"
            android:label="MyPets"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".MyProfileActivity"
            android:label="My Profile"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".SearchPetsActivity"
            android:label="Search Pets"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".NotificationsActivity"
            android:label="Notifications"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".DetailActivity"
            android:label="Detailed view"
            android:parentActivityName=".MyPetsActivity" />
        <activity
            android:name=".SearchResultsActivity"
            android:label="Search results"
            android:parentActivityName=".SearchPetsActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="ProjectPets Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".secondLoginActivity"
            android:label="signUp"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".MainMenuShelter"
            android:label="ShelterMainMenu" />
        <activity
            android:name=".AddPetsActivity"
            android:parentActivityName=".MainMenu"></activity>
    </application>

</manifest>